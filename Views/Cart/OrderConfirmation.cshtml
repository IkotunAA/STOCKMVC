@model STOCKMVC.Entities.Order

<h2>Order Confirmation</h2>

<p>Thank you for your order!</p>
<p>Order ID: @Model.Id</p>
<p>Order Date: @Model.OrderDate</p>
<p>Status: @Model.Status</p>

<h3>Order Details</h3>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@item.Product.SellingPrice</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total: @Model.TotalPrice</h3>
